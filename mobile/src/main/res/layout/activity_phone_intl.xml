<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity"
    tools:ignore="MergeRootFrame">

    <org.dwallach.calwatch.MyViewAnim
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/surfaceView" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">


            <View
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="#404040"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_seconds"
                android:id="@+id/showSeconds"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:checked="true"
                android:clickable="true"
                android:enabled="true"
                android:layout_columnSpan="2" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_day_date"
                android:id="@+id/showDayDate"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:checked="true"
                android:clickable="true"
                android:enabled="true"
                android:layout_columnSpan="2"
                android:layout_marginBottom="15dp" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/liteButton"
                    android:layout_gravity="left"
                    android:checked="false"
                    android:enabled="true"
                    android:clickable="true"
                    android:width="103dp"
                    android:height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/radio_lite_selector" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numbersButton"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:enabled="true"
                    android:clickable="true"
                    android:width="103dp"
                    android:height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/radio_numbers_selector" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolButton"
                    android:layout_gravity="right"
                    android:checked="true"
                    android:clickable="true"
                    android:enabled="true"
                    android:width="103dp"
                    android:height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/radio_tool_selector" />
            </RadioGroup>

        </GridLayout>
    </ScrollView>

</LinearLayout>
