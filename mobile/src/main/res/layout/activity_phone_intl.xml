<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity"
    tools:ignore="MergeRootFrame">

    <org.dwallach.calwatch.MyViewAnim
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/surfaceView" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:clickable="true"
            android:contextClickable="true"
            android:orientation="vertical">


            <View
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:background="#404040"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showSeconds"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:checked="true"
                android:clickable="true"
                android:enabled="true"
                android:layout_columnSpan="1"
                android:button="@drawable/ic_second_hand_button"
                android:contextClickable="false" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showDayDate"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:checked="true"
                android:clickable="true"
                android:enabled="true"
                android:layout_columnSpan="1"
                android:text="Mon DD\nDayofweek"
                android:contextClickable="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showStepCounter"
                android:checked="true"
                android:clickable="true"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_columnSpan="1"
                android:button="@drawable/ic_step_counter"
                android:layout_gravity="top|left" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:orientation="horizontal"
                android:layout_columnSpan="3">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/liteButton"
                    android:layout_gravity="left"
                    android:checked="false"
                    android:enabled="true"
                    android:clickable="true"
                    android:width="103dp"
                    android:height="100dp"
                    android:button="@drawable/radio_lite_selector" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numbersButton"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:enabled="true"
                    android:clickable="true"
                    android:width="103dp"
                    android:height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:button="@drawable/radio_numbers_selector" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolButton"
                    android:layout_gravity="right"
                    android:checked="true"
                    android:clickable="true"
                    android:enabled="true"
                    android:width="103dp"
                    android:height="100dp"
                    android:button="@drawable/radio_tool_selector" />
            </RadioGroup>

        </GridLayout>
    </ScrollView>

</LinearLayout>
