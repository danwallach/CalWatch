<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat">
        <!-- <item name="android:actionBarStyle" tools:targetApi="lollipop">@android:style/Widget.Material.ActionBar.Solid</item> -->
        <item name="colorPrimary">@color/calWatchPrimary</item>
        <item name="colorPrimaryDark">@color/calWatchLessDark</item>
        <item name="colorAccent">@color/calWatchAccent</item>

        <item name="android:windowBackground">@color/calWatchLessDark</item>
        <item name="android:colorBackground">@color/calWatchLessDark</item>
    </style>

    <style name="MyCardView" parent="CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@color/calWatchDark</item>
        <!-- Ripple for API 21 of android, and regular selector on older -->
        <item name="android:foreground">?android:selectableItemBackground</item>
        <!-- Resting Elevation from Material guidelines -->
        <item name="cardElevation">2dp</item>
        <!-- Add corner Radius -->
        <item name="cardCornerRadius">0dp</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
